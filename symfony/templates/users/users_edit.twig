{% extends "empty.twig" %}

{% block stylesheets %}{% endblock %}

{% block subtitle %}GDZIE JEST PODTYTUŁ{% endblock %}

{% block page_title %}Użytkownicy{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block before_page_content %}<hr>{% endblock %}

{% block page_content %}
<div class="content">
    <div class="container mt-6" style="width: 100%;">
        <div class="form-group" style="display: flex; width: 100%;">
            <label for="monthpicker" id="label_monthpicker">Znajdź rekord:</label>
            <input class="form-control input-sm" type="text" id="data_search" value="" style="display: inline-block; width: 150px; margin-left: 10px;">
            <input type="submit" class="btn btn-primary" id="month_submit" value="Szukaj"/>
			<a href="{{ path('add_user_twig') }}" class="btn btn-info" role="button">Dodaj użytkownika</a>
        </div>
    </div>
    <div class="table">
        <table class="table table-striped" id="main_table">
            <tbody class="data">
                <tr class="table_headers">
                    <th class="first_th">Id</th>
					<th class="first_th">Login</th>
					<th class="first_th">Hasło</th>
                    <th class="first_th">Role</th>
					<th class="first_th"></th>
					<th class="first_th"></th>
                </tr>
				{% for user in users %}
				<form action="{{ path('delete_user', { 'id': user.id}) }}" method="POST">
					<tr row_id="{{ user.id }}">
						<td>{{ user.id }}</td>
						<td>{{ user.username }}</td>
						<td>{{ user.password }}</td>
						{% for roles in user.roles %}
                        	<td>{{ roles }}</td>
						{% endfor %}	
						<td></td>
					</tr>
				</form>
        		{% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

