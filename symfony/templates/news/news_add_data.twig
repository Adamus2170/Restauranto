{% extends "empty.twig" %}

{% block stylesheets %}{% endblock %}

{% block subtitle %}GDZIE JEST PODTYTUŁ{% endblock %}

{% block page_title %}Dodaj aktualności{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block before_page_content %}<hr>{% endblock %}

{% block page_content %}
<div class="row">
	<div class="col-lg-6">
		<div class="box box-default">
			<div class="box-body">
                <form action="{{ path('add_news') }}" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <h3>Zdjęcie</h3>
                        <input class="form-control" type="file" accept="image/*" name="pic" id="pic">{# accept="image/*" #}
                    </div>
                    <div class="form-group">
                        <h3>Nazwa</h3>
                        <input type="text" class="form-control" name="name" required></input>
                    </div>
                    <div class="form-group">
                        <h3 class="card-title">Składniki</h3>
                        <textarea class="summernote" name="ingredients" required></textarea>
                    </div>
                    <div class="form-group">
                        <h3 class="card-title">Cena</h3>
                        <input type="number" class="form-control" name="price" required></input>
                    </div>
                    <div class="edit_user_footer">
                        <button class="mt-2 pull-left" id="edit_user_cancel" type="button">Anuluj</button>
                        <button class="btn btn-sm btn-primary pull-right"><i class="fa fa-save" type="submit"></i> &nbsp; Zatwierdź</button>
                    </div>
                </form>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
<script>
const users_list_site = `{{ path('news_edit') }}`;
{# const unique_login_check_url = `{{ path("unique_login_check") }}`; #}

$(function () {
    // Summernote
    $('.summernote').summernote('code', '')
    })
</script>
<script src="{{ asset('/js/admin_user_edit.js') }}"></script>
{% endblock %}

