{% extends "admin_base.twig" %}

{% block title %}{{ parent() }} | Logowanie{% endblock %}

{% block body_class %}login-page{% endblock %}

{% block body %}
    <div class="login-box">
        <div class="login-logo">
            <a href="./"><img style="width: 60%;" src="" alt="alternatywa" /></a>
            <h3>Nazwa aplikacji</h3>
        </div>
        <!-- /.login-logo -->

        <div class="login-box-body">
            <p class="login-box-msg">Logowanie</p>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path('login') }}" method="POST">
                <div class="form-group has-feedback">
                    <input type="text" id="username" name="username" required="required" class="form-control" placeholder="Login">
                    <i class="far fa-user form-control-feedback"></i>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="password" name="password" required="required" class="form-control" placeholder="Hasło">
                    <i class="fas fa-lock form-control-feedback"></i>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox">
                            <label class="noselect">
                                <input type="checkbox" name="_remember_me"> Zapamiętaj mnie
                            </label>
                        </div>
                    </div>
                    
                    <div class="col-xs-4 pull-right">
                        <button type="submit" class="btn btn-primary btn-block">Zaloguj</button>
                    </div>
                </div>
            </form>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
{% endblock body %}

{% block javascripts %}

{% endblock %}